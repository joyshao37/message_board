<p id="notice"><%= notice %></p>

<h1>試用版Message Board</h1>

<table>
  <thead>
    <tr>
      <th>姓名</th>
      <th>內容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.title %></td>
        <td><%= message.description %></td>
        <td ><%= link_to '編輯留言', edit_message_path(message) %></td>
        <td><%= link_to '刪除留言', message, method: :delete, data: { confirm: '確定要刪除嗎?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

